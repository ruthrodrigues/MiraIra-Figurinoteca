<script>
    function filterCards(category) {
        const allCards = document.querySelectorAll('.card');
        allCards.forEach(card => {
            if (category === 'todos') {
                card.style.display = 'block';
            } else if (card.classList.contains(category)) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });
    }
    filterCards('todos');
</script>

