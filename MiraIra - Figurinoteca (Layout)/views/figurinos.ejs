<%- include('partials/header', { title: 'Figurinos' }) %>

<style>
    .filter-column {
        background-color: #ff7300;
        padding: 20px;
        height: 100vh; 
        width: 150px;
        position: fixed;
        top: 50px;
        left: 0;
        border-radius: 5px;
        overflow-y: auto;
    }
    .filter-column a {
        color: white;
        display: block;
        margin-bottom: 10px;
        text-decoration: none;
        font-size: 18px;
    }
    .filter-column a:hover {
        color: #ffd700;
    }
    .filter-column hr {
        border: 1px solid #fff;
        margin: 10px 0;
    }
    .card {
        display: none;
        margin-bottom: 15px; 
    }
    .card img {
        height: 150px; 
        object-fit: cover;
    }
    .container {
        margin-left: 170px;
        width: calc(100% - 170px);
    }
    header {
        margin-bottom: 50px;
    }
    .filters {
        margin-bottom: 30px;
    }
    header .container {
        display: flex;
        justify-content: flex-end;
        text-align: center;
    }
    header .container a {
        margin-right: 20px;
        margin-left: 20px;
    }
    .container h1 {
        text-align: center;
        margin-top: 10px;  /* Reduzida a margem superior para subir o título */
        margin-bottom: 20px;
    }
    .row {
        display: flex;
        flex-wrap: wrap;
        gap: 15px; 
    }
    .col-md-9 {
        flex-grow: 1;
        width: 100%;
    }
    .col-md-4 {
        flex: 1 0 20%;
    }
</style>

<div class="container">
